<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Inventory</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Welcome to my Inventory </h1>
  <a href="/users/<%= user._id %>/items/new">Add New Item</a>
  <% if(inventory.length) { %>
  <ul>
    <% inventory.forEach((item)=>{ %>
      <li>
        <%= item.name %>
        <a href="/users/<%= user._id %>/itemss/<%= item._id %>/edit">
          Edit
        </a>
        <form
          action="/users/<%= user._id %>/items/<%= item._id %>?_method=DELETE"
          method="POST"
        >
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
  <% } else { %>
    <p>There are no items in this inventory.</p>
  <% } %>
</body>
</html>