<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Inventory</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>My Inventory</h1>
  <a href="/users/<%= user._id %>/items/new">Add New Item</a>

  <% if (inventory && inventory.length > 0) { %>
    <ul>
      <% inventory.forEach(item => { %>
        <li>
          <%= item.name %> - <%= item.quantity %>
          <a href="/users/<%= user._id %>/items/<%= item._id %>/edit">Edit</a>
          <form action="/users/<%= user._id %>/items/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>There are no items in this inventory.</p>
  <% } %>
</body>
</html>
