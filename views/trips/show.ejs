<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= trip.destination%></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= trip.destination %></h1>
    <p><%= trip.duration %></p>

    <!--lists -->
    <h2>Lists</h2>
    <% if (trip.lists && trip.lists.length > 0) { %>
      <ul>
        <% trip.lists.forEach(list=> { %>
          <li><%= list.name %></li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No lists created.</p>
    <% } %>

    <!-- Link to Add lists View -->
    <a href="/trips/<%=trip._id %>/add-lists">Add Lists</a>

    <!-- Edit and Delete options -->
    <a href="/trips/<%= trip._id %>/edit">Edit Trip</a>
    <form action="/trips/<%= trip._id %>?_method=DELETE" method="POST" style="display: inline;">
      <input type="submit" value="Delete Trip">
    </form>
  </body>
</html>